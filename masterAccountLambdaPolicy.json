{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "cwLogGroup",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "snsPublish",
            "Effect": "Allow",
            "Action": "sns:Publish",
            "Resource": "<snsTopicARN>"
        },
        {
            "Sid": "xAccountAssumeRole",
            "Action": [
                "sts:AssumeRole"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "invokeLambda",
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": [
                "<Func1ARN>",
                "<Func2ARN>",
                "<Func3ARN>",
                "<Func4ARN>"
            ]
        }
    ]
}