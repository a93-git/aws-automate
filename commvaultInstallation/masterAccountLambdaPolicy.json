{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "cwloggroup",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "snspublish",
            "Effect": "Allow",
            "Action": "sns:Publish",
            "Resource": "arn:aws:sns:<region>:<account_number>:<topic_name>"
        },
        {
            "Sid": "crossaccountassumerole",
            "Action": [
                "sts:AssumeRole"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:iam::<account_number>:role/<role_name>"
        }        
    ]
}